<!doctype html>
<html>
<div align=center>
  <link href='https://fonts.googleapis.com/css?family=Comfortaa' rel='stylesheet' type='text/css'>
<style type='text/css'>
    body{
      font-family: 'Comfortaa', sans-serif;
      color: white;
      background: url(http://all4desktop.com/data_images/original/4238069-background.jpg);
      background-size: 100%, 100%;
      background-repeat: no-repeat;
  }

    h1 {
      font-size: 45px;
  }

    button{
      font-family: 'comfortaa', sans-serif;
      border-width: medium;
      border-color: white;
      border-style: solid;
      border-radius: 20px;
      background-color: transparent;
      color: white;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      font-size: 20px;
      text-align: center;
      height: 35px;
  }

    .button span {
    cursor: pointer;
    display: inline-block;
    position: relative;
    transition: 0.5s;
  }

  .button span:after {
    content: 'buzz';
    position: absolute;
    opacity: 0;
    top: 0;
    right: 0px;
    transition: 0.5s;
  }

  .button:hover span {
    padding-right: 47px;
  }

  .button:hover span:after {
    opacity: 1;
    right: 0;
  }
  .button:active{
    position: relative;
    top: 2px;
  }
  button:focus{
    outline:none;
  }
  input {
    font-size: 20px;
    border-radius: 20px;
    border-color: transparent;
  }
  input:focus{
    outline:none;
  }

</style>
  <head>
    <title> fizzbuzz </title>
    <br><br><br><br>
    <h1>fizzbuzz</h1>
    <br>
    <%= yield %>
  </body>
</font>
</div>
</html>
